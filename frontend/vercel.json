{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "VITE_API_URL": {
      "description": "Backend API URL for production",
      "default": "https://movie-recommendation-backend.onrender.com"
    }
  }
}
